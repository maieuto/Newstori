<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<color name="AppGrey">#b2b3b3</color>

	<style name="MyTheme" parent="@android:style/Theme.Holo.Light">

        <item name="android:actionBarTabBarStyle">@style/MyActionTabBarTheme</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">#ffffff</item>

      	<item name="android:windowBackground">@color/AppGrey</item>
      	<item name="android:colorBackground">@color/AppGrey</item>

    </style>

    <style name="MyActionTabBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">#792956</item>
    </style>
    <style name="MyActionBarTabText"  parent="@android:style/Widget.TabWidget">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#E50062</item>
        <item name="android:titleTextStyle">@style/MyActionBarText</item>
  		<item name="android:actionBarStyle">@style/MyActionBarLogo</item>
    </style>
	<style name="MyActionBarLogo" parent="@style/Widget.AppCompat.ActionBar">

	  <item name="logo">@drawable/transparent</item>
	</style>

	<style name="MyActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Theme.Splash" parent="@style/MyTheme">
    	<item name="android:windowBackground">@drawable/splash_background</item>
    	<item name="android:windowNoTitle">true</item>
  	</style>



</resources>