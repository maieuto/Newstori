<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#dddddd" 
xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="HyperlocalNews.LoginPage"
xmlns:i18n="clr-namespace:HyperlocalNews;assembly=HyperlocalNews">
	<ContentPage.Content>
		<StackLayout x:Name="layout" VerticalOptions="CenterAndExpand" HorizontalOptions="Fill">

			<Label Text="{i18n:Translate AppTitle}" />

            <Frame Padding="0,30,0,30"> 
   	 			<Button x:Name="joinButton"
   	 				Text="{i18n:Translate SignUpLabel}"
            		
		           	HorizontalOptions="Fill"
            		Clicked = "Join" />
            </Frame>
	   	 	
	   	 	<Button x:Name="existingUserButton" 
   		 		Text="{i18n:Translate LoginLabel}"
   	 			
          	 	HorizontalOptions="Fill"
            	Clicked = "Existing" />

    	</StackLayout>
	</ContentPage.Content>
</ContentPage>
